<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <ImageView
        android:id="@+id/background_1"
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/image_radius" />

    <ImageView
        android:id="@+id/my_img1"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="105dp"
        app:srcCompat="@drawable/juwan" />

    <ImageView
        android:id="@+id/my_img"
        android:layout_width="140dp"
        android:layout_height="170dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/image_radius" />

    <TextView
        android:id="@+id/name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/font_tway_air"
        android:text="이주완"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="155dp"
        android:fontFamily="@font/font_tway_air"
        android:text="미림여자정보과학\n고등학교 1학년\n\n뉴미디어\n소프트웨어과"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tool_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/font_tway_air"
        android:text="사용 가능한 언어"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/tool_use"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/image_radius" />

    <TextView
        android:id="@+id/cert_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="425dp"
        android:fontFamily="@font/font_tway_air"
        android:text="취득 자격증"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/cert"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="455dp"
        android:background="@drawable/image_radius" />

    <TextView
        android:id="@+id/cele_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="540dp"
        android:fontFamily="@font/font_tway_air"
        android:text="수상 내역"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/cele"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/image_radius" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:background="#0057FF"
        android:fontFamily="@font/font_tway_air"
        android:text="포트폴리오 보러가기"
        android:textColor="@color/white"
        android:textSize="20dp" />




</RelativeLayout>